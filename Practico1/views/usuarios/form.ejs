<%- include('../../components/headerUsuario.ejs') %>
<div class="container">
    <div class="row justify-content-center"> <!-- Center the form horizontally -->
        <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
            <div class="card mt-5"> <!-- Add a larger margin on top -->
                <div class="card-body">
                    <h5 class="card-title text-center">Registro de usuarios</h5> <!-- Center the title -->
                    <form method="post" action="">
                        <% if (errors) { %>
                            <div class="alert alert-warning">
                                <%= errors.message %>
                            </div>
                        <% } %>
                        <div class="mt-3">
                            <label>Nombre</label>
                            <input required class="form-control" type="nombre" name="nombre"
                                placeholder="Nombre" value="<%=usuario && usuario.nombre %>">
                            <% if (errors?.nombre) { %>
                                <div class="error-label text-danger mt-1">
                                    Por favor ingrese un nombre
                                </div>
                            <% } %>
                        </div>
                        <div class="mt-3">
                            <label>Email</label>
                            <input required class="form-control" type="email" name="email"
                                placeholder="Email" value="<%=usuario && usuario.email %>">
                            <% if (errors?.email) { %>
                                <div class="error-label text-danger mt-1">
                                    Por favor ingrese un email
                                </div>
                            <% } %>
                        </div>
                        <div class="mt-3">
                            <label>Password</label>
                            <input required class="form-control" type="password" name="password"
                                placeholder="Ingrese la contraseña">
                            <% if (errors?.password) { %>
                                <div class="error-label text-danger mt-1">
                                    Por favor ingrese una contraseña
                                </div>
                            <% } %>
                        </div>
                        <div class="mt-4 text-center">
                            <input class="btn btn-primary w-100" type="submit" value="Enviar"> <!-- Full-width button -->
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../components/footer.ejs') %>
