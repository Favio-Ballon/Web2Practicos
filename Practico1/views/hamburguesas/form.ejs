<%- include('../../components/header.ejs') %>
    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Formulario de hamburguesas</h5>
                        <form method="post" enctype="multipart/form-data" action="<% if (hamburguesa) { %>
                /restaurantes/<%= hamburguesa.restauranteId%>/menu/<%=hamburguesa.id%>/edit
            <% } else{%>
                /restaurantes/<%= restauranteId %>/menu/create
                <% } %>">
                            <div class="mt-2">
                                <label>Nombre</label>
                                <input class="form-control" type="text" name="nombre" placeholder="Nombre"
                                    value="<%=hamburguesa && hamburguesa.nombre %>">
                                    <% if (errors?.nombre) { %>
                                        <div class="error-label text-danger mt-1">
                                            Por favor ingrese un nombre
                                        </div>
                                    <% } %>
                            </div>
                            <div class="mt-2">
                                <label>Precio</label>
                                <input class="form-control" type="text" name="precio" placeholder="precio"
                                    value="<%=hamburguesa && hamburguesa.precio %>">
                                    <% if (errors?.precio) { %>
                                        <div class="error-label text-danger mt-1">
                                            Por favor ingrese un precio
                                        </div>
                                    <% } %>
                            </div>
                            <div class="mt-2">
                                <label>Descripcion</label>
                                <input class="form-control" type="text" name="descripcion" placeholder="descripcion"
                                    value="<%=hamburguesa && hamburguesa.descripcion %>">
                                    <% if (errors?.descripcion) { %>
                                        <div class="error-label text-danger mt-1">
                                            Por favor ingrese una descripcion
                                        </div>
                                    <% } %>
                            </div>
                            <div class="mt-2">
                                <div>
                                    <% if (hamburguesa) { %>
                                    <img src="<%= hamburguesa.imagen %>" alt="Foto de hamburguesa"
                                        class="img-fluid" />
                                        <% } else{%>
                                            <img src="/images/hamburguesas/default.jpg" alt="Foto de hamburguesa"
                                        class="img-fluid" />
                                            <% } %>
                                </div>
                                <div class="mt-2 has-validation">
                                    <label>Foto de hamburguesa</label>
                                    <input <% if(!hamburguesa){ %> required <% } %> class="form-control" type="file" name="photo" />
                                </div>
                                <% if (errors?.imagen) { %>
                                    <div class="error-label text-danger mt-1">
                                        Por favor ingrese una imagen
                                    </div>
                                <% } %>
                            </div>
                            <div class="mt-2">
                                <input class="btn btn-primary" type="submit" value="Enviar">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../components/footer.ejs') %>