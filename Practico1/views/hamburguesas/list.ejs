<%- include('../../components/headerUsuario.ejs') %>

<main class="container my-4">
    <h1 class="text-center mb-4">Hamburguesas Disponibles</h1>

    <div class="row">
        <% if (hamburguesas.length > 0) { %>
            <% hamburguesas.forEach(hamburguesa => { %>
                <div class="col-sm-6 col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <a href="/hamburguesa/<%= hamburguesa.id %>">
                            <img src="<%= hamburguesa.imagen %>" class="card-img-top" alt="Imagen de <%= hamburguesa.nombre %>" loading="lazy">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title text-primary font-weight-bold">
                                <a href="/hamburguesa/<%= hamburguesa.id %>" class="text-decoration-none">
                                    <%= hamburguesa.nombre %>
                                </a>
                            </h5>
                            <p class="card-text"><strong>Descripci√≥n:</strong> <%= hamburguesa.descripcion %></p>
                            <p class="card-text"><strong>Precio:</strong> $<%= hamburguesa.precio %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <p class="text-center text-muted">No hay hamburguesas disponibles.</p>
            </div>
        <% } %>
    </div>
</main>

<%- include('../../components/footer.ejs') %>
