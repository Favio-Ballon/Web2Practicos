<%- include('../../components/header.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-12">

                <div class="card mt-3">
                    <div class="card-body">
                        <div class="card-title hamburguesas-create">
                            <h3>Lista de hamburguesas</h3>
                            <a class="btn btn-primary" href="/restaurantes/<%= restauranteId %>/menu/create">Crear</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table ">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>precio</th>
                                        <th>descripcion</th>
                                        <th>imagen</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% hamburguesas.forEach(hamburguesa=> { %>
                                        <tr>
                                            <td>
                                                <%= hamburguesa.id %>
                                            </td>
                                            <td>
                                                <%= hamburguesa.nombre %>
                                            </td>
                                            <td>
                                                <%= hamburguesa.precio %>
                                            </td>
                                            <td>
                                                <%= hamburguesa.descripcion %>
                                            </td>
                                            <td>
                                                <img src="<%= hamburguesa.imagen %>" alt="imagen" width="100">
                                            </td>
                                            <td><a class="btn btn-primary"
                                                    href="/restaurantes/<%= restauranteId %>/menu/<%= hamburguesa.id %>/edit">Editar</a></td>
                                            <td>
                                                <form method="post" action="/restaurantes/<%= restauranteId %>/menu/<%= hamburguesa.id %>/delete"
                                                    onsubmit="return confirm('EstÃ¡ seguro que desea eliminar?')">
                                                    <input class="btn btn-danger" type="submit" value="Eliminar">
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../components/footer.ejs') %>