<%- include('../../components/header.ejs') %>
    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Formulario de restaurantes</h5>
                        <form method="post" enctype="multipart/form-data" action="<% if (restaurante) { %>
                /restaurantes/<%=restaurante.id%>/edit
            <% } else{%>
                /restaurantes/create
                <% } %>">
                            <div class="mt-2">
                                <label>Nombre</label>
                                <input class="form-control" type="text" name="nombre" placeholder="Nombre"
                                    value="<%=restaurante && restaurante.nombre %>">
                                    <% if (errors?.nombre) { %>
                                        <div class="error-label text-danger mt-1">
                                            Por favor ingrese un nombre
                                        </div>
                                    <% } %>
                            </div>
                            <div class="mt-2">
                                <label>Direccion</label>
                                <input class="form-control" type="text" name="direccion" placeholder="direccion"
                                    value="<%=restaurante && restaurante.direccion %>">
                                    <% if (errors?.direccion) { %>
                                        <div class="error-label text-danger mt-1">
                                            Por favor ingrese un direccion
                                        </div>
                                    <% } %>
                            </div>
                            <div class="mt-2">
                                <label>Telefono</label>
                                <input class="form-control" type="text" name="telefono" placeholder="telefono"
                                    value="<%=restaurante && restaurante.telefono %>">
                                    <% if (errors?.telefono) { %>
                                        <div class="error-label text-danger mt-1">
                                            Por favor ingrese un telefono
                                        </div>
                                    <% } %>
                            </div>
                            <div class="mt-2">
                                <div>
                                    <% if (restaurante) { %>
                                    <img src="<%= restaurante.imagen %>" alt="Foto de restaurante"
                                        class="img-fluid" />
                                        <% } else{%>
                                            <img src="/images/restaurantes/default.jpg" alt="Foto de restaurante"
                                        class="img-fluid" />
                                            <% } %>
                                </div>
                                <div class="mt-2 has-validation">
                                    <label>Logo del restaurante</label>
                                    <input <% if(!restaurante){ %> required <% } %> class="form-control" type="file" name="photo" />
                                </div>
                                <% if (errors?.imagen) { %>
                                    <div class="error-label text-danger mt-1">
                                        Por favor ingrese una imagen
                                    </div>
                                <% } %>
                            </div>
                            <div class="mt-2">
                                <input class="btn btn-primary" type="submit" value="Enviar">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../components/footer.ejs') %>